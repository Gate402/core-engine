generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  googleId String? @unique
  name     String?

  // support sign in with ethereum
  evmAddress String? @unique
  nonce      String?

  // Subscription/Quota (for future freemium model)
  subscriptionTier   String   @default("free")
  subscriptionStatus String   @default("active")
  requestQuota       Int      @default(1000) // Free: 1K requests/month
  requestCount       Int      @default(0)
  quotaResetAt       DateTime @default(now())

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  gateways  Gateway[]

  @@index([email])
  @@index([subscriptionTier])
}

model Gateway {
  id           String  @id @default(uuid())
  userId       String
  user         User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  subdomain    String  @unique
  customDomain String? @unique
  originUrl    String
  secretToken  String  @unique

  // Renamed for route future-proofing
  // Stores user-facing price (e.g., "0.1" for 0.1 USDC)
  defaultPricePerRequest String
  defaultToken           String? // Token ID reference

  status         String @default("active")
  paymentScheme  String @default("exact")
  paymentNetwork String @default("eip155:84532") // Base Sepolia
  evmAddress     String // Payment recipient (API provider wallet)

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  requestLogs RequestLog[]

  @@index([subdomain])
  @@index([customDomain])
  @@index([userId])
  @@index([status])
}

model RequestLog {
  id              String   @id @default(uuid())
  gatewayId       String
  gateway         Gateway  @relation(fields: [gatewayId], references: [id], onDelete: Cascade)
  method          String
  path            String
  statusCode      Int
  paymentRequired Boolean  @default(false)
  paymentProvided Boolean  @default(false)
  paymentValid    Boolean  @default(false)
  paymentId       String?
  durationMs      Int?
  clientWallet    String?
  clientIp        String?
  createdAt       DateTime @default(now())

  // Payment tracking
  paymentAmount    String? // Amount paid (in token decimals, e.g., "100000" for 0.1 USDC)
  paymentToken     String? // Token symbol (USDC, etc.)
  paymentNetwork   String? // Network used (eip155:84532, etc.)
  settlementTxHash String? // On-chain transaction hash
  settlementStatus String? // pending, success, failed

  // Error tracking
  errorType    String? // timeout, invalid_payment, origin_error, settlement_failed
  errorMessage String?

  // Latency breakdown
  paymentVerifyMs Int? // Time to verify payment signature
  settlementMs    Int? // Time to settle on-chain
  originLatencyMs Int? // Response time from origin server

  @@index([gatewayId, createdAt])
  @@index([gatewayId, statusCode, createdAt]) // Error tracking
  @@index([gatewayId, path]) // Route analytics
  @@index([clientWallet, createdAt])
  @@index([settlementTxHash])
  @@index([paymentNetwork, createdAt])
}

// Aggregated daily stats for fast dashboard queries
model DailyStats {
  id        String   @id @default(uuid())
  gatewayId String
  date      DateTime @db.Date

  // Request counts
  totalRequests  Int @default(0)
  paidRequests   Int @default(0)
  failedRequests Int @default(0) // 4xx/5xx responses

  // Payment metrics
  paymentAttempts Int    @default(0) // Requests with payment header
  successfulPayments Int @default(0) // Valid & settled payments
  failedPayments  Int    @default(0) // Invalid or failed settlements
  totalRevenue    String @default("0") // In smallest token unit

  // Payer metrics
  uniquePayers Int @default(0) // Distinct wallets

  // Performance metrics
  avgLatencyMs Int? // Average total request latency
  p95LatencyMs Int? // 95th percentile latency
  avgOriginMs  Int? // Average origin server response time

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([gatewayId, date])
  @@index([gatewayId, date])
}

model Chain {
  id             String   @id // e.g. "eip155:84532"
  name           String
  nativeCurrency String // e.g. "eth"
  rpcUrl         String?
  blockExplorer  String?
  tokens         Token[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Token {
  id        String   @id @default(uuid())
  chainId   String
  chain     Chain    @relation(fields: [chainId], references: [id], onDelete: Cascade)
  symbol    String // e.g. "usdc"
  address   String // e.g. "0x..."
  decimals  Int
  name      String? // EIP-712 name
  version   String? // EIP-712 version
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([chainId, symbol])
  @@index([chainId])
}
